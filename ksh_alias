alias ls="colorls -G"
alias l="ls -lh"
alias la="ls -lha"
alias e="exit"
alias netr="netstat -rnf inet"
alias netp="netstat -anf inet"
alias c="clear"
alias wanip='curl --get http://tnx.nl/ip'
alias myterm='clear ;tput longname cols lines ;echo $TERM ;echo $SHELL ;/usr/site/bin/256colors2.pl'
alias test256="/usr/site/bin/256colors2.pl"
alias daemon.log='/usr/local/bin/colortail -k  /usr/local/share/examples/colortail/conf.daemon -f /var/log/daemon'
alias messages.log='/usr/local/bin/colortail -k  /usr/local/share/examples/colortail/conf.messages -f /var/log/messages'
alias secure.log='/usr/local/bin/colortail -k  /usr/local/share/examples/colortail/conf.secure -f /var/log/secure'
alias authlog.log='/usr/local/bin/colortail -k  /usr/local/share/examples/colortail/conf.authlog -f /var/log/authlog'
alias xferlog.log='/usr/local/bin/colortail -k  /usr/local/share/examples/colortail/conf.xferlog -f /var/log/xferlog'
alias vimpf="/usr/local/bin/vim /etc/pf.conf ;/sbin/pfctl -vf /etc/pf.conf"
alias kshrc=". ~/.kshrc"
alias xclip="/usr/local/bin/xclip -selection clipboard "
alias allbin="/usrlocal/bin/gawk 'BEGIN{_path=ENVIRON[\"PATH\"]; gsub(/:/,\",\",_path); gsub(/\,.$/,\"\",_path); printf \"%s%s%s\", \"{\", _path, \"}\" }'"
alias gpg="/usr/local/bin/gpg2"
alias randhex='printf "%x\n" "${RANDOM}"'
